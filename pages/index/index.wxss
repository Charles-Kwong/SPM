/**index.wxss**/

.container {
  height: 1500rpx;
  padding: 0;
  font-size: 14rpx;
  color: #000;
}

.container .today-message-box {
  padding: 30rpx 0 60rpx;
  background-image: linear-gradient(to top, #8ab2ef 0%, #377ee8 100%);
  color: #fff;
}

.welcome-info {
  font-size: 30rpx;
  text-align: center;
}
.icon {
  margin-right: 5rpx;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.info-text {
  margin-right: 10rpx;
}
.number-view {
  margin: 100rpx auto 0;
  width: 80%;
}
.container .message-title {
  margin: 0 auto;
  width: 150rpx;
  text-align: center;
  font-size: 30rpx;
}

.container .message-count {
  margin: 0 auto;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 100rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 80rpx;
  font-weight: bold;
}

.space-line {
  display: block;
  height: 24rpx;
  width: 100%;
}

.slider {
  margin: auto 0;
  width: 0;
  height: 105rpx;
  border-left: 1rpx solid #ccc;
}


.tabTit {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: solid 1px #eee;
  position: relative;
  top: 0;
  width: 750rpx;
  z-index: 1;
  background: #fff;
  font-size: 15px;
  text-align: center;
  background: #fff;
}

.tabTit .active {
  color: #e64340;
  background: #fff;
}

.tabTit .active image {
  transform: rotate(180deg);
  background: none;
}

.tabTit image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-left: 5px;
}

.tabLayer {
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15);
  width: 750rpx;
  overflow: hidden;
  position: relative;
  top: 0;
  z-index: 1;
  background: #fff;
  padding-bottom: 40rpx;
  border-bottom: solid 1px #eee;
  text-align: center;
}

.tabLayer text {
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  border: solid 1px #eee;
  margin: 20rpx 0 0 26rpx;
  font-size: 15px;
}

.tabLayer .active {
  color: #e64340;
  border-color: #e64340;
}

.flex1 {
  flex: 1;
  overflow: hidden;
  display: block;
}
