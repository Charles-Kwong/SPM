/* pages/my/my_performance/performance.wxss */
.recordItem {
  margin: 0 15rpx;
  padding:20rpx 40rpx;
  border-bottom:1rpx solid #ccc;
  background: #fff;
}
.item-title{
  text-align: left;
  font-weight: bold; 
}
.item-content{
  text-align: right;
}


.tabTit {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: solid 1px #eee;
  position: relative;
  top: 0;
  width: 750rpx;
  z-index: 1;
  background: #fff;
  font-size: 15px;
  text-align: center;
  background: #fff;
}

.tabTit .active {
  color: #e64340;
  background: #fff;
}

.tabTit .active image {
  transform: rotate(180deg);
  background: none;
}

.tabTit image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-left: 5px;
}

.tabLayer {
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15);
  width: 750rpx;
  overflow: hidden;
  position: relative;
  top: 0;
  z-index: 1;
  background: #fff;
  padding-bottom: 40rpx;
  border-bottom: solid 1px #eee;
  text-align: center;
}

.tabLayer text {
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  border: solid 1px #eee;
  margin: 20rpx 0 0 26rpx;
  font-size: 15px;
}

.tabLayer .active {
  color: #e64340;
  border-color: #e64340;
}

.flex1 {
  flex: 1;
  overflow: hidden;
  display: block;
}